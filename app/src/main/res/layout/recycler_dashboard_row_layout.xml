<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#b2ebf2"
    android:layout_margin="6dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b2ebf2"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:id="@+id/imgRowLayout1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_profile" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3">

            <TextView
                android:id="@+id/txtRLname1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                android:text="Boxer Name"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRLrecord1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRLname1"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                android:text="Boxing Record"
                android:textColor="#757575"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtRLyears1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRLrecord1"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                android:text="Years Active"
                android:textColor="#757575"
                android:textSize="13sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtRLrating1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.2"
            android:drawableLeft="@drawable/ic_rating"
            android:text="5.0"
            android:textColor="#BDC300"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>