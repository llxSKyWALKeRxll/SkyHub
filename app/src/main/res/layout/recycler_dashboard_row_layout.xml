<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#b2ebf2"
    android:id="@+id/rlContent">

    <ImageView
        android:id="@+id/imgRowLayout1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/txtRLname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/imgRowLayout1"
        android:padding="10dp"
        android:text="Boxer Name"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtRLrecord1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#757575"
        android:layout_below="@id/txtRLname1"
        android:layout_toRightOf="@id/imgRowLayout1"
        android:layout_marginLeft="2dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="Boxing Record"/>

    <TextView
        android:id="@+id/txtRLyears1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#757575"
        android:layout_below="@id/txtRLrecord1"
        android:layout_toRightOf="@id/imgRowLayout1"
        android:layout_marginLeft="2dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="Years Active"/>

    <ImageView
        android:id="@+id/txtRLstars1"
        android:layout_width="25dp"
        android:layout_height="18dp"
        android:layout_toLeftOf="@id/txtRLrating1"
        android:layout_marginRight="5dp"
        android:src="@drawable/star"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtRLrating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="5.0"
        android:textStyle="bold"
        android:textColor="#827717"
        android:layout_marginRight="10dp"/>

</RelativeLayout>